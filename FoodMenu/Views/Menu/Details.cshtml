@using Microsoft.EntityFrameworkCore.Metadata.Internal
@model FoodMenu.Models.Dish

@{
    ViewData["Title"] = "Details";
    Layout = "_Layout";
}

<div class="container">
    <div class="d-flex justify-content-center">
        <h3>@Model.Name</h3>
    </div>
    <div class="d-flex justify-content-center">
        <img src=@Model.ImageUrl alt="Pizza" style="width: 50%" />
    </div>
    <div class="d-flex justify-content-center">
        @Model.Price.ToString("N2") Dollars
    </div>
    <div class="d-flex justify-content-center">
        Ingredients:
        <ul>
            @foreach (var item in Model.DishIngredients)
            {
                <li>
                    @item.Ingredient.Name
                </li>
            }
        </ul>
    </div>
    <div>
        <a class="btn btn-info" asp-action="Index">Back to the menu</a>
    </div>
</div>

